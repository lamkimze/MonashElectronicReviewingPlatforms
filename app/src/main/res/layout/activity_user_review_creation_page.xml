        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reviewDetailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_marginTop="8dp"
            app:boxStrokeWidthFocused="0sp"
            app:boxStrokeWidth="0sp"
            app:boxCornerRadiusTopStart="10sp"
            app:boxCornerRadiusTopEnd="10sp"
            app:boxCornerRadiusBottomStart="10sp"
            app:boxCornerRadiusBottomEnd="10sp"
            android:inputType="text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reviewDetail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
                android:inputType="text|textLongMessage|textAutoComplete|textAutoCorrect|textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Add Tags"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/tagsLayout"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            app:helperText="Enter each tags space separated"
            app:helperTextTextColor="@color/red"
            app:boxStrokeWidthFocused="0sp"
            app:boxStrokeWidth="0sp"
            app:boxCornerRadiusTopStart="10sp"
            app:boxCornerRadiusTopEnd="10sp"
            app:boxCornerRadiusBottomStart="10sp"
            app:boxCornerRadiusBottomEnd="10sp">

            <com.example.myapplication.TagsInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
                android:id="@+id/tagsET"/>

        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_button"
                    android:foregroundGravity="center"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <TextView
                    android:id="@+id/totalPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_Gallery_Images"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>



        <Button
            android:id="@+id/reviewSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Submit"
            android:backgroundTint="@color/purple"
            android:layout_marginTop="20dp"/>

