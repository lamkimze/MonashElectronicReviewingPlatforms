<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent padding area at the top, left, and right -->
    <item
        android:left="20dp"
        android:right="20dp"
        android:top="20dp">
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Transparent background for the padding area -->
        </shape>
    </item>

    <!-- Actual pill shape -->
    <item>
        <shape>
            <solid android:color="@color/blue"/> <!-- Background color of the pill -->
            <corners android:radius="50dp"/> <!-- Rounded corners -->
            <padding
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>

</layer-list>
