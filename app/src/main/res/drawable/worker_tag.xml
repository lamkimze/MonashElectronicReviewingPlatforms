<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent padding area -->
    <item android:top="20dp">
        <shape>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <!-- Actual pill shape -->
    <item>
        <shape>
            <solid android:color="@color/mor_green"/> <!-- Background color of the pill -->
            <corners android:radius="50dp"/> <!-- Rounded corners -->
            <padding
                android:left="5dp"
                android:right="5dp"/>
        </shape>
    </item>
</layer-list>
